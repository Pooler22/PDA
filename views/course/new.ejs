<h3>Dodaj kurs</h3>
<hr>

<form action="/course/create" class="form-create-course" method="POST">
  <div class="form-group">
    <dl class="dl-horizontal">

      <dt>Nazwa kurs:</dt>
      <dd>
        <input class="form-control" name="name" placeholder="Nazwa kursu" type="text">
      </dd>

      <dt>Typ kursu:</dt>
      <dd>
        <select class="form-control" name="type">
          <option>Pattern design</option>
          <option>Best practice</option>
        </select>
      </dd>

      <dt>Krótki opis:</dt>
      <dd>
        <textarea class="form-control" name="shortdescription" placeholder="Krótki opis"></textarea>
      </dd>

      <input name="_csrf" type="hidden" value="<%= _csrf %>">

      <hr>
      <dt>
        Operacje
      </dt>
      <dd>
        <button class="btn btn-success" type="submit">Dodaj stronę</button>
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <a class="btn btn-danger" href="/course">Odrzuć</a>
      </dd>

    </dl>
  </div>
</form>
<hr>
