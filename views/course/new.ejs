<md-content flex layout-padding>
  <label>Dodaj kurs</label>
  <md-form ng-submit="submitLoginForm()">
    <md-dialog-content>

      <md-input-container>
        <label>Nazwa kursu</label>
        <input name="name" ng-model="addCourseForm.name" type="text">
      </md-input-container>

      <md-input-container>
        <label>Typ kursu</label>
        <md-select ng-model="addCourseForm.type">
          <md-option>
            Pattern design
          </md-option>
          <md-option>
            Best practice
          </md-option>
        </md-select>
      </md-input-container>

      <md-input-container>
        <label>Kr√≥tki opis</label>
        <input name="shortdescription" ng-model="addCourseForm.shortdescription" type="text">
      </md-input-container>

    </md-dialog-content>
    <div class="md-actions">
      <md-button ng-click="submitLoginForm()">
        Zapisz
      </md-button>
      <md-button ng-click="submitLoginForm()">
        Anulujs
      </md-button>
    </div>
  </md-form>
</md-content>
