<h3>Dodaj wzorzec</h3>
<hr><div ng-controller="SignupController" ng-cloak>
<form action="/pattern/update/<%= pattern.id %>" method="POST" class="form-update-pattern">
  <div class="form-group">
    <dl class="dl-horizontal">
      <dt>Nazwa wzorca:</dt>
      <dd>
        <input type="text" class="form-control" placeholder="Nazwa wzorca" name="name" value="<%= pattern.name %>">
      </dd>

      <hr>
      <dt>Krótki opis:</dt>
      <dd>
        <textarea type="text" class="form-control" placeholder="Krótki opis" name="shortdescription"><%= pattern.shortdescription %></textarea>
      </dd>

      <input type="hidden" name="_csrf" value="<%= _csrf %>">

      <hr>

      <dt></dt>

      <dd>

        <button type="submit" class="btn btn-success">Dodaj stronę</button>
        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a href="/pattern" class="btn btn-danger">Wróć</a>
      </dd>
    </dl>
  </div>
</form>
</div>
