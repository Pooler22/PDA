<md-content flex layout-padding >
  <h2>Edycja profilu</h2>
  <md-form action="/user/update/<%= user.id %>" class="form-signin" method="POST">
    <md-input-container>
      <label>ImiÄ™</label>
      <input name="name" type="text" value="<%= user.name %>"/>
    </md-input-container>
    <md-input-container>
      <label>Nick</label>
      <input name="nick" type="text" value="<%= user.nick %>"/>
    </md-input-container>
    <md-input-container>
      <label>Email</label>
      <input name="email" type="text" value="<%= user.email %>"/>
    </md-input-container>
    <% if (session.authenticated && session.User.admin) { %>
      <md-input-container>
        <label>Jest administratorem</label>
        <input name="admin" type="text" value="<%= user.admin %>"/>
      </md-input-container>
    <% } %>

    <input class="md-button" type="submit" value="Zapisz"/>
    <input name="_csrf" type="hidden" value="<%= _csrf %>"/>
  </form>
</md-content>
